{
  "manifest_version": 2,

  "name": "Page Clipper",
  "description": "Clip parts of a webpage.",
  "version": "1.0",

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  //"content_scripts": [
  //  {
  //    "matches": ["http://www.google.com/*"],
  //    "css": ["mystyles.css"],
  //    "js": ["jquery.js", "myscript.js"]
  //  }
  //],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "contextMenus",
    "storage"
  ]
}